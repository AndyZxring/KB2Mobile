<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutusActivity">


  <TextView
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginTop="40dp"
      android:gravity="center"
      android:text="Mengapa Ma Chung?"
      android:textSize="60dp"
      android:textStyle="bold"
      android:textColor="@color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="28dp"
      android:layout_marginTop="224dp"
      android:gravity="center"
      android:text="Masa Tunggu Kerja 0 Bulan, kesempatan mendapatkan beasiswa, tenaga pengajar profesional, fasilitas akademik dan pendukung terkini, lingkungan kampus yang asri, sarana IT canggih, kesempatan studi dan magang di luar negeri, dan telah terakreditasi oleh Badan Akreditasi Nasional."
      android:textSize="20dp"
      android:textColor="@color/black"
      android:textStyle="normal"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/backBtn"
      android:layout_width="120dp"
      android:layout_height="25dp"
      android:layout_marginStart="144dp"
      android:layout_marginBottom="252dp"
      android:background="@drawable/btnback"
      android:text="Kembali"
      android:textColor="@color/white"
      android:textSize="16dp"
      android:onClick="backBtn"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>